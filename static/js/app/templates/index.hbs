<div id="above-posts">
  <div class="row">
    <div class="span7">
      {{view Ember.TextArea id="post-text" placeholder="say something..." rows="3" valueBinding="newPostTitle" disabledBinding="postBoxDisabled" class="span7"}}
    </div>
  </div>
  <div class="row">
    <div class="span2 offset5">
      <button id="post-unencrypted-button" {{bindAttr disabled="postButtonDisabled"}} {{action "createNewPost"}} class="btn btn-primary pull-right">
        post unencrypted <i class="icon-share-alt icon-white"></i>
      </button>
      <p>

    {{view Ember.TextArea id="encrypt-password" placeholder="pick a password..." rows="3" valueBinding="newEncryptionPassword"  class="span2"}}        

      <button id="post-encrypted-button" {{bindAttr disabled="encryptPostButtonDisabled"}} {{action "createNewEncryptedPost"}} class="btn btn-primary pull-right">
        post encrypted! <i class="icon-share-alt icon-white"></i>
      </button>
    </div>
  </div>
</div>

{{view "App.PostsView" controllerBinding="controllers.posts"}}